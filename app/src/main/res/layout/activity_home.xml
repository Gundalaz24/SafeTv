<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="135dp"
        android:layout_marginTop="-13dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:src="@drawable/video"/>
        <ImageView
            android:id="@+id/kategori"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:src="@drawable/kategori"/>
    </LinearLayout>
    <ImageView
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginTop="-5dp"
        android:src="@drawable/garis"/>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="600dp"></ListView>
    <ImageView
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:layout_marginTop="-15dp"
        android:src="@drawable/garis"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/beranda"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1.2"
            android:src="@drawable/berandaon"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/garisfoot"/>
        <ImageView
            android:id="@+id/saya"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/sayaoff"/>
    </LinearLayout>
</LinearLayout>