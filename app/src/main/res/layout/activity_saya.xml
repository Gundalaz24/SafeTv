<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Saya">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_gravity="top"
        android:src="@drawable/headersaya"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="-330dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/pen"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/foto" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Photo"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="35dp"/>

    <ImageView
        android:id="@+id/unggah"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/unggah"/>
    <ImageView
        android:layout_width="500dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/garissaya"/>
    <ImageView
        android:id="@+id/videosaya"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/videosaya"/>
    <ImageView
        android:layout_width="500dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/garissaya"/>
    <ImageView
        android:id="@+id/riwayat"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/riwayat"/>
    <ImageView
        android:layout_width="500dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/garissaya"/>
    <ImageView
        android:id="@+id/logout"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/logout"/>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/garis"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/beranda"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1.2"
            android:src="@drawable/berandaoff"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/garisfoot"/>
        <ImageView
            android:id="@+id/saya"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/sayaon"/>
    </LinearLayout>

</LinearLayout>